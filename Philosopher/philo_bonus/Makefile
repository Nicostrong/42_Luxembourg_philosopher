CC				=	cc
CFLAGS			=	-Wall -Werror -Wextra
CC_OPT			=	-pthread -g

DEB				=	valgrind

DEB_MEM			=	--tool=memcheck \
					--leak-check=full \
					--show-leak-kinds=all 
					
DEB_THREAD		=	--tool=helgrind

ARG0			=	1 400 200 100
ARG1			=	2 400 250 100
ARG2			=	12 450 300 125
ARG3			=	8 450 200 200 4
ARG4			=	5 400 250 200 2

RM				=	rm -f

